# Roane's Kitchen - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ===================
# Database Configuration
# ===================

# PostgreSQL password - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=changeme

# ===================
# Backend Configuration
# ===================

# JWT secret key for token signing - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -base64 64
JWT_SECRET_KEY=changeme

# Environment mode (development or production)
ENVIRONMENT=production

# Debug mode (true or false) - should be false in production
DEBUG=false

# Frontend URL for notification links (e.g., http://yourdomain.com or http://192.168.1.100)
FRONTEND_URL=http://localhost:5173

# ===================
# Discord Notifications (Optional)
# ===================

# Discord bot token (leave empty to disable notifications)
# Get from: https://discord.com/developers/applications
# 1. Create application → Bot section → Create bot → Copy token
DISCORD_BOT_TOKEN=

# Discord channel ID for meal plan notifications
# Enable Developer Mode in Discord settings → Right-click channel → Copy Channel ID
DISCORD_NOTIFICATION_CHANNEL_ID=

# Discord channel ID for test messages (dev/staging environments only)
# Used by "Test Connection" button in Settings UI
DISCORD_TEST_CHANNEL_ID=

# ===================
# Port Configuration
# ===================

# Backend API port (default: 8000)
BACKEND_PORT=8000

# Frontend web UI port (default: 80 for prod, 5173 for dev)
FRONTEND_PORT=80

# Frontend API URL (production only - injected at runtime)
# Set this to your backend URL (e.g., http://your-server:8000)
API_URL=http://localhost:8000

# ===================
# Unraid Configuration
# ===================

# Path for application data (Unraid: /mnt/user/appdata/kitchen)
APPDATA_PATH=./data

# Backup retention in days (default: 30)
BACKUP_RETENTION_DAYS=30

# ===================
# Docker Image Configuration
# ===================

# Docker image tags (default: latest for production)
# For testing feature branches, set to: feature-system7-ui
BACKEND_IMAGE_TAG=latest
FRONTEND_IMAGE_TAG=latest

# ===================
# Development Only
# ===================

# Enable debugpy for Python debugging (development only)
ENABLE_DEBUGPY=false

# Vite API URL (frontend development only)
VITE_API_URL=http://localhost:8000
