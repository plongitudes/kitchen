# Roane's Kitchen - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ===================
# Database Configuration
# ===================

# PostgreSQL password - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=changeme

# ===================
# Backend Configuration
# ===================

# JWT secret key for token signing - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -base64 64
SECRET_KEY=changeme

# Environment mode (development or production)
ENVIRONMENT=production

# Debug mode (true or false) - should be false in production
DEBUG=false

# ===================
# Discord Notifications (Optional)
# ===================

# Discord bot token (leave empty to disable notifications)
# Get from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=

# Discord channel ID for notifications
# Enable Developer Mode in Discord, right-click channel, Copy ID
DISCORD_CHANNEL_ID=

# ===================
# Port Configuration
# ===================

# Backend API port (default: 8000)
BACKEND_PORT=8000

# Frontend web UI port (default: 80 for prod, 5173 for dev)
FRONTEND_PORT=80

# ===================
# Unraid Configuration
# ===================

# Path for application data (Unraid: /mnt/user/appdata/roanes-kitchen)
APPDATA_PATH=./data

# Backup retention in days (default: 30)
BACKUP_RETENTION_DAYS=30

# ===================
# Development Only
# ===================

# Enable debugpy for Python debugging (development only)
ENABLE_DEBUGPY=false

# Vite API URL (frontend development only)
VITE_API_URL=http://localhost:8000
