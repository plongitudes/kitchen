# Production Environment Configuration for Roanes Kitchen
# Copy this file to .env.prod and fill in your production values

# ============================================================================
# Unraid Configuration
# ============================================================================
# Path to Unraid appdata directory
APPDATA_PATH=/mnt/user/appdata/roanes-kitchen

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_PASSWORD=change-me-to-secure-password

# ============================================================================
# Application Configuration
# ============================================================================
# IMPORTANT: Generate a secure secret key for production
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-in-production-use-strong-random-value

# Application environment
ENVIRONMENT=production
DEBUG=false

# ============================================================================
# Port Configuration
# ============================================================================
BACKEND_PORT=8000
FRONTEND_PORT=80

# ============================================================================
# Frontend Configuration
# ============================================================================
# API URL for the frontend (adjust based on your Tailscale setup)
VITE_API_URL=http://your-unraid-server:8000

# ============================================================================
# Discord Bot (Optional)
# ============================================================================
# Leave empty if not using Discord notifications
DISCORD_BOT_TOKEN=
DISCORD_CHANNEL_ID=

# ============================================================================
# Backup Configuration
# ============================================================================
# Number of days to retain backups (default: 30)
BACKUP_RETENTION_DAYS=30
